<h6>Archive</h6>
<h3>Welcome, {{name}}</h3>
<p>Here is your archive</p>

{{#if allSchedules}}
    <table class="striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Quote of the Day</th>
                <th>Status</th>
                <th></th> 
            </tr>
        </thead>
        <tbody>
            {{#each allSchedules}}
                <tr>
                    <td><a href="/schedule/edit/{{_id}}">{{formatDate day 'MMMM Do YYYY'}}</a></td>
                    <td><span>{{quoteOfTheDay}}</span></td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td>
                        <form action="/schedule/{{_id}}" method="POST" id="delete-form">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="trash" style="border: none; background: none;">
                                <i class="fas fa-trash" style="color: #0492C2; cursor: pointer;"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>You have not added anything to your schedule.</p>

{{/if}}